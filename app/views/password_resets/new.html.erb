<div class="container">
    <div class="row">
        <div class="col-lg-4 text-left">
        	<h3 class="section-heading">Reset Your Password</h3>
        </div>
    </div>
</div>



<div class="container">
	<div class="row">
		<div class="col-md-4">

			<%= form_tag password_resets_path do %>
			  <%= label_tag :email, "Email" %>
			  <%= text_field_tag :email %>

			  <br />
			  <%= submit_tag "Reset Password" %>
			<% end %>

		</div>
	</div>
</div>
